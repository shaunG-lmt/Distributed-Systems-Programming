<Window x:Class="SignalRClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SignalRClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="535.714" Width="453.361">
    <Grid>
        <Label Content="UserName:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="73"/>
        <TextBox x:Name="UsernameTextBox" HorizontalAlignment="Left" Height="23" Margin="83,14,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="352"/>
        <TextBox x:Name="MessageTextBox" HorizontalAlignment="Left" Height="52" Margin="10,55,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="425"/>
        <Button x:Name="connectBtn" Content="Connect" HorizontalAlignment="Left" Margin="10,112,0,0" VerticalAlignment="Top" Width="205" Click="Connect_Button_Click"/>
        <Button x:Name="sendBtn" Content="Send" HorizontalAlignment="Left" Margin="230,112,0,0" VerticalAlignment="Top" Width="205" Click="Send_Button_Click"/>
        <ListBox x:Name="MessagesListBox" HorizontalAlignment="Left" Height="358" Margin="10,137,0,0" VerticalAlignment="Top" Width="425"/>

    </Grid>
</Window>
